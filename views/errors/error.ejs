<!-- **************************************
* Header
************************************** -->
<% if (title) { %>
    <h1><%= title %></h1>
<% } else { %>
    <h1>Page Not Found</h1>
<% } %> 

<!-- **************************************
* Error Message
************************************** -->
<% if (message) { %>
    <p><%= message %></p>
<% } else { %>
    <p>Oops! Something went wrong.</p>
<% } %>

